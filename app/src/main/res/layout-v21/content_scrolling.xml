<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.learntoanimate.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="352dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="5dp"
            android:background="#00ffffff"
            android:visibility="visible"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="200dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="TextView"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/repo_title"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:typeface="serif"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:text="TextView"
                    android:layout_width="305dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/repo_created_at"
                    android:gravity="start"
                    android:typeface="sans"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/repo_title" />

                <TextView
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repo_issues"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:typeface="sans"
                    android:textSize="16sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintRight_toRightOf="@+id/textView7"
                    app:layout_constraintLeft_toLeftOf="@+id/textView7"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                <TextView
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repo_forks"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:typeface="sans"
                    android:textSize="16sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintRight_toRightOf="@+id/textView8"
                    app:layout_constraintLeft_toLeftOf="@+id/textView8"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                <TextView
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repo_pulls"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:typeface="sans"
                    android:textSize="16sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintLeft_toLeftOf="@+id/textView9"
                    app:layout_constraintRight_toRightOf="@+id/textView9"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                <TextView
                    android:text="Issues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:gravity="center"
                    android:padding="0dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/repo_issues"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:text="Forks"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:gravity="center"
                    android:padding="0dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/repo_forks"
                    android:layout_marginStart="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/textView7"
                    app:layout_constraintRight_toLeftOf="@+id/textView9"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:text="Stars"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:gravity="center"
                    android:padding="0dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/repo_pulls"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent" />

                <ImageView
                    android:layout_height="20dp"
                    app:srcCompat="@android:drawable/ic_menu_sort_by_size"
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/repo_created_at" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/url_link"
                    android:id="@+id/imageView5"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/repo_url"
                    android:autoLink="web"
                    app:layout_constraintTop_toTopOf="@+id/imageView4"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                    app:layout_constraintRight_toRightOf="@+id/repo_size"
                    android:layout_marginStart="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/imageView4"
                    android:textAlignment="viewStart"
                    android:textColor="?android:attr/statusBarColor"
                    android:fontFamily="sans-serif"
                    android:textColorLink="?attr/colorPrimaryDark" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/repo_size"
                    app:layout_constraintTop_toTopOf="@+id/imageView5"
                    android:layout_marginStart="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/imageView5"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:fontFamily="monospace"
                    android:textStyle="normal|bold" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="5dp"
            android:background="#00ffffff"
            android:visibility="visible"
            android:id="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/card_view"
            app:layout_constraintRight_toRightOf="@+id/card_view"
            app:layout_constraintLeft_toLeftOf="@+id/card_view">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/repo_lang"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/repo_description"
                    android:layout_marginStart="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/languages"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.33"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:text="Languages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/languages"
                    android:fontFamily="sans-serif"
                    android:textSize="10sp"
                    android:typeface="normal"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/repo_description"
                    app:layout_constraintBottom_toBottomOf="@+id/repo_lang"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintVertical_bias="0.84000003" />

                <TextView
                    android:text="README"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:typeface="sans"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/repo_description"
                    android:fontFamily="sans-serif"
                    android:typeface="sans"
                    android:textSize="16sp"
                    android:textColor="?attr/colorControlNormal"
                    android:textAlignment="viewStart"
                    android:padding="5dp"
                    android:clickable="false"
                    android:editable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textIsSelectable="false" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
